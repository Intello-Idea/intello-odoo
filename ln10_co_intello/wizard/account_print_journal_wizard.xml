<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_report_print_journal_view" model="ir.ui.view">
            <field name="name">Journals Audit</field>
            <field name="model">account.print.journal</field>
            <field name="inherit_id" ref="account.account_common_report_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/group[1]" position="before">
                        <group col="2" attrs="{'invisible': [('is_multi_book', '=', False)]}">
                            <field name="is_multi_book" invisible="1"/>
                            <field name="book_id"
                                   attrs="{'invisible': [('is_multi_book', '=', False)],'required':[('is_multi_book', '!=', False)]}"
                                   options="{'no_create_edit': True, 'no_create': True, 'no_open': True}">

                            </field>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>