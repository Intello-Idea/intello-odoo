<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_accounting_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.accounting.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"></field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='settings']/div[@data-key='account']" position="inside">
                    <h2>Multi Book</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="multi_book" default="False"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="multi_book"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <function model="res.config.settings" name="_method"/>

        <!-- Client Products -->
        <!-- Action server For accounting client products -->
        <record id="action_server" model="ir.actions.server">
            <field name="name"> </field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_book_report_wizard"/>
            <field name="binding_model_id" ref="model_book_report_wizard"/>
            <field name="state">code</field>
            <field name="code">

                action = model.new_action_product_accounting_purchasable()

            </field>
        </record>

    </data>
</odoo>