            <field name="arch" type="xml">
                <!--<tree editable="bottom">-->
                <form string="DIAN Address Nomenclature">
                    <sheet>
                        <group>
                            <field name="key_dian"/>
                            <field name="name"/>
                            <field name="code_short"/>
                            <field name="with_digit" widget="check"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="documenttype_view_search" model="ir.ui.view">
            <field name="name">ln10_co_intello.documenttype.search</field>
            <field name="model">ln10_co_intello.documenttype</field>
            <field name="arch" type="xml">
                <search>
                    <field name="key_dian"/>
