            <field name="model">ln10_co_intello.nomenclaturedian</field>
            <field name="arch" type="xml">
                <!--<tree editable="bottom">-->
                <form string="DIAN Address Nomenclature">
                    <sheet>
                        <group>
                            <field name="abbreviation"/>
                            <field name="name"/>
                            <field name="type" widget="selection"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="nomenclature_dian_view_search" model="ir.ui.view">
            <field name="name">ln10_co_intello.nomenclaturedian.search</field>
            <field name="model">ln10_co_intello.nomenclaturedian</field>
            <field name="arch" type="xml">
                <search>
                    <field name="abbreviation"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_nomenclature_dian" model="ir.actions.act_window">
            <field name="name">DIAN Address Nomenclature</field>
            <field name="res_model">ln10_co_intello.nomenclaturedian</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                action="action_nomenclature_dian"
                name="DIAN Address Nomenclature"
                id="nomenclature_dian_menu"
                parent="account.account_account_menu"
                sequence="107"/>

        <record id="documenttype_view_tree" model="ir.ui.view">
            <field name="name">ln10_co_intello.documenttype.tree</field>
            <field name="model">ln10_co_intello.documenttype</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="key_dian"/>
                    <field name="name"/>
                    <field name="with_digit"/>
                </tree>
            </field>
        </record>

        <record id="documenttype_view_form" model="ir.ui.view">
            <field name="name">ln10_co_intello.documenttype.form</field>
