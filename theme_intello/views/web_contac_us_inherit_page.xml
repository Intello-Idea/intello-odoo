<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="thi_contactus">
            <field name="name">Contact us</field>
            <field name="type">qweb</field>
            <field name="key">website.contactus</field>
            <field name="inherit_id" ref="website.contactus"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='wrap']" position="replace">
                    <div id="wrap" class="oe_structure page_home">
                        <section id="contact_banner_id" name="contact_banner" class="banner banner_contact">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-7 offset-md-1 banner-top-space">
                                        <div class="banner-title-text">
                                            <h1>
                                                CONTÁCTANOS<br/>
                                                <span>BOGOTÁ, COLOMBIA<br/></span>
                                            </h1>
                                        </div>
                                        <div class="banner-title-line">
                                            <hr class="bottom-line"/>
                                        </div>
                                        <div class="banner-subtitle-text">
                                            <h4>
                                                Piensa en <span>grande</span>, piensa
                                                en <span>nosotros</span>.
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="col-md-4"/>
                                </div>
                            </div>
                        </section>

                        <section id="contact_form_id" name="contact_form">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="offset-1 col-md-7">
                                        <form id="contactus_form" t-ignore="true" action="/website_form/" method="post"
                                              data-model_name="mail.mail" class="s_website_form container-fluid mt32"
                                              enctype="multipart/form-data" data-success_page="/contactus-thank-you">
                                            <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="text" class="form-control o_website_form_input"
                                                           placeholder="Your Name"
                                                           name="Name" required=""/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="text" class="form-control o_website_form_input"
                                                           placeholder="Phone Number"
                                                           name="Phone"/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="email" class="form-control o_website_form_input"
                                                           placeholder="Email"
                                                           name="email_from"
                                                           required=""/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="text" class="form-control o_website_form_input"
                                                           placeholder="Your Company"
                                                           name="Partner Name"/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_required_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="text" class="form-control o_website_form_input"
                                                           placeholder="Subject"
                                                           name="subject"
                                                           required=""/>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field o_website_form_custom o_website_form_required_custom">
                                                <div class="col-lg-10 col-md-12">
                                                    <textarea class="form-control o_website_form_input"
                                                              placeholder="Your Question"
                                                              name="Description"
                                                              required=""></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group row form-field d-none">
                                                <div class="col-lg-10 col-md-12">
                                                    <input type="hidden" class="form-control o_website_form_input"
                                                           name="email_to"
                                                           t-att-value="res_company.email"/>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-md-12 col-lg-10">
                                                    <a href="#"
                                                       class="btn btn-orange btn-lg btn-block o_website_form_send">
                                                        Send</a>
                                                    <span id="o_website_form_result"></span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-3 pt-5 background">
                                        <address itemscope="itemscope" itemtype="http://schema.org/Organization">
                                            <!-- TODO widget contact must add itemprop attributes -->
                                            <div t-field="res_company.partner_id"
                                                 t-options='{"widget": "contact", "fields": ["name", "address", "phone", "mobile", "email"]}'/>
                                            <t t-if="not res_company.google_map_img()">
                                                <span class="fa fa-map-marker fa-fw mt16" role="img"
                                                      aria-label="Address" title="Address"/> <a
                                                    t-att-href="res_company.google_map_link()" target="_BLANK"> Google
                                                Maps</a>
                                            </t>
                                        </address>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section id="map_id" name="map">
                            <div class="container-fluid h-100">
                                <div class="col-md-10 offset-md-1 h-100">
                                    <iframe width="100%" height="100%" frameborder="0" style="border:0;"
                                            allowfullscreen=""
                                            aria-hidden="false" tabindex="0"
                                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3976.417042378947!2d-74.0525081852377!3d4.69738129658808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3f9ab70c57db8f%3A0x546a04f5c782a9d2!2zQWsuIDE5ICMjMTE0LTY1LCBCb2dvdMOh!5e0!3m2!1ses-419!2sco!4v1599166703288!5m2!1ses-419!2sco"/>
                                </div>
                            </div>
                        </section>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>