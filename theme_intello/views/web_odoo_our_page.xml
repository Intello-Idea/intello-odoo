<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="thi_odoo_our" model="ir.ui.view">
            <field name="name">Odoo Our</field>
            <field name="type">qweb</field>
            <field name="key">theme_intello.thi_odoo_our</field>
            <field name="arch" type="xml">
                <t name="odoo_our" priority="40" t-name="theme_intello.thi_odoo_our">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'web_develop'"/>
                        <div id="wrap" class="oe_structure">
                            <section id="odoo_our_banner_id" name="odoo_our_banner" class="banner">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-9 offset-md-1 banner-odoo-our-padding">
                                            <div class="banner-title-text">
                                                <h1 class="banner-title-odoo-our">
                                                    ES MOMENTO DE<br/>
                                                    <span class="banner-tittle-odoo-our-bold">REINVENTARSE </span>
                                                    Y HACER<br/> QUE TU NEGOCIO
                                                    <span class="banner-tittle-odoo-our-bold">SEA DIGITAL</span>
                                                </h1>
                                            </div>
                                            <div class="banner-title-line">
                                                <hr class="bottom-line"/>
                                            </div>
                                            <div class="banner-subtitle-text">
                                                <h4 class="banner-subtitle-bold">
                                                    ¡Lee esto!
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="col-md-2"/>
                                    </div>
                                </div>
                            </section>
                            <section id="odoo_implementation_id" name="odoo_implementation"
                                     class="odoo-our-section-implementation">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-7 offset-md-4 col-sm-12 col-12">
                                            <div class="align-items-center justify-content-center">
                                                <div class="text-right">
                                                    <h1>IMPLEMENTACIÓN</h1>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-4 my-auto">
                                            <img src="/theme_intello/static/src/img/odoo-our/Imagen1-08.png"
                                                 class="img-fluid img-implementation">
                                            </img>
                                        </div>
                                        <div class="col-md-5 col-sm-6  col-8 text-implementation">
                                            <div class="text-justify">
                                                <p>
                                                    Apoyamos a las organizaciones a adoptar e implementar Odoo ERP como
                                                    su
                                                    principal herramienta de
                                                    transformación y crecimiento.
                                                </p>
                                                <p>
                                                    Contamos con gerentes de proyectos consultores, analistas y
                                                    desarrolladores con amplia experiencia en
                                                    implementaciones Odoo.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section id="odoo_our_develop_id" name="odoo_our_develop"
                                     class="odoo-our-section-develop background-section-develop">
                                <div class="container-fluid ">
                                    <div class="row">
                                        <div class="col-md-5 offset-md-1 col-sm-12 col-12">
                                            <h1>
                                                DESARROLLO
                                            </h1>
                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col-md-5 offset-md-1 col-sm-8 col-8">
                                            <div class="text-justify paragraph-develop">
                                                <p>
                                                    Nuestros especialistas Odoo desarrollan nuevas funcionalidades y
                                                    mejoras para cubrir todos los flujos de
                                                    operaciones deseados, que no están dentro del estándar de Odoo.
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-4 col-4 my-auto">
                                            <img src="/theme_intello/static/src/img/odoo-our/Imagen2-08.png"
                                                 class="img-fluid">

                                            </img>

                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section id="odoo_our_consulting_id" name="odoo_our_consulting"
                                     class="odoo-our-section-consulting">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-7 offset-md-5 col-sm-12 col-12">
                                            <div class="text-right">
                                                <h1>CONSULTORIA</h1>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-4 my-auto">
                                            <img src="/theme_intello/static/src/img/odoo-our/Imagen3-08.png"
                                                 class="img-fluid">

                                            </img>
                                        </div>
                                        <div class="col-md-8 col-sm-8 col-8">
                                            <div class="text-justify adjust-text-consulting">
                                                <p>
                                                    Te brindamos asesoría especializada en Odoo para ayudarte a
                                                    optimizar y organizar los procesos de tu empresa
                                                    basados en las mejores prácticas. Nuestros consultores
                                                    analizarán el funcionamiento de tu negocio y te sugerirán
                                                    la mejor manera de usar Odoo, brindando acompañamiento de manera
                                                    presencial o remota.
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section id="odoo_our_support_id" name="odoo_our_support"
                                     class="odoo-our-section-develop odoo-our-section-support">
                                <div class="container-fluid ">

                                    <div class="row">
                                        <div class="col-md-5 offset-md-1 col-sm-12 col-12">
                                            <h1>
                                                SOPORTE
                                            </h1>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 offset-md-1 col-sm-8 col-8">
                                            <div class="text-justify paragraph-develop">
                                                <p>
                                                    Contamos con una estructura de trabajo que nos permite brindarte el
                                                    soporte funcional y técnico de la
                                                    plataforma Odoo, con unos acuerdos de niveles de servicio adecuados
                                                    a tus necesidades y así garantizar el
                                                    funcionamiento continuo del servicio.
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-5 offset-md-1 col-sm-4 col-4 my-auto">
                                            <img src="/theme_intello/static/src/img/odoo-our/Imagen4-08.png"
                                                 class="img-fluid img-support">

                                            </img>

                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>

    <data noupdate="0">
        <!-- Manage Page odoo -->
        <record id="thi_odoo_our_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/odoo/odoo-our</field>
            <field name="view_id" ref="theme_intello.thi_odoo_our"/>
            <field name="track">True</field>
        </record>

    </data>

</odoo>