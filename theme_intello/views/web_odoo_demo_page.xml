<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="thi_odoo_demo" model="ir.ui.view">
            <field name="name">Demo Page</field>
            <field name="type">qweb</field>
            <field name="key">theme_intello.thi_odoo_demo</field>
            <field name="arch" type="xml">
                <t name="Demo" priority="50" t-name="theme_intello.thi_odoo_demo">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'web_demo'"/>
                        <div id="wrap" class="oe_structure">
                            <section id="odoo_demo_banner_id" name="odoo_demo_banner" class="banner odoo-demo-banner">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-7 offset-md-1">
                                            <div class="banner-text">
                                                <div class="banner-title-text">
                                                    <h1>
                                                        <span>¡Hazlo ahora!<br/></span>
                                                    </h1>
                                                </div>
                                                <div class="banner-title-line">
                                                    <hr class="bottom-line"/>
                                                </div>
                                                <div class="banner-subtitle-text">
                                                    <h4>
                                                        <span class="banner-subtitle">Selecciona los módulos que
                                                            quieres<br/>
                                                            probar en tu demo</span>
                                                    </h4>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4"/>
                                    </div>
                                </div>
                            </section>
                            <section id="odoo_demo_form_id" name="odoo_demo_form" class="section-form">
                                <form action="/website_form/" method="post"
                                      class="s_website_form container-fluid mt32 o_fake_not_editable"
                                      enctype="multipart/form-data" data-name="Form Builder" data-model_name="crm.lead"
                                      data-success_page="/contactus-thank-you">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-5 offset-md-3">

                                                <div class="row form-group form-field d-none">
                                                    <div class="col-lg-3 col-md-4">
                                                        <label class="col-form-label o_fake_editable" for="team_id">

                                                        </label>
                                                    </div>
                                                    <div class="col-lg-7 col-md-8">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="team_id"
                                                               value="1"/>
                                                    </div>
                                                </div>
                                                <div class="row form-group form-field d-none">
                                                    <div class="col-lg-3 col-md-4">
                                                        <label class="col-form-label o_fake_editable" for="user_id">

                                                        </label>
                                                    </div>
                                                    <div class="col-lg-7 col-md-8">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="user_id"
                                                               value="2"/>
                                                    </div>
                                                </div>

                                                <div class="form-group row form-field o_website_form_required_custom o_fake_not_editable">
                                                    <div class="col-md-5 col-lg-3">
                                                        <label class="col-form-label o_fake_editable"
                                                               for="contact_name">
                                                            NOMBRE</label>
                                                    </div>
                                                    <div class="col-md-12 col-lg-9">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="contact_name" required=""/>
                                                    </div>
                                                </div>
                                                <div class="form-group row form-field o_website_form_required_custom o_fake_not_editable">
                                                    <div class="col-md-5 col-lg-3">
                                                        <label class="col-form-label " for="partner_name">
                                                            EMPRESA</label>
                                                    </div>
                                                    <div class="col-md-12 col-lg-9">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="partner_name" required="true"/>
                                                    </div>
                                                </div>
                                                <div class="form-group row form-field o_website_form_required_custom o_fake_not_editable">
                                                    <div class="col-md-5 col-lg-3">
                                                        <label class="col-form-label o_fake_editable" for="phone">
                                                            TELÉFONO</label>
                                                    </div>
                                                    <div class="col-md-12 col-lg-9">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="phone"/>
                                                    </div>
                                                </div>
                                                <div class="form-group row form-field o_website_form_required_custom o_fake_not_editable">
                                                    <div class="col-md-5 col-lg-3">
                                                        <label class="col-form-label o_fake_editable" for="email_from">
                                                            EMAIL</label>
                                                    </div>
                                                    <div class="col-md-12 col-lg-9">
                                                        <input type="text" class="form-control o_website_form_input"
                                                               name="email_from" required=""/>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-md-2 demo-position">
                                                <div class="background-demo text-align-center">
                                                    <p class="text-center">
                                                        <span> Tu demo <br/> por 15 Días</span>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-md-3"/>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-9 offset-md-3">
                                                <div class="row form-group form-field o_website_form_custom o_fake_not_editable">
                                                    <div class="col-lg-5 col-md-12  text-selection">
                                                        <label class="col-form-label o_fake_editable"
                                                               for="modules">
                                                            SELECCIONE LOS MÓDULOS</label>
                                                    </div>
                                                    <div class="col-md-8 col-lg-10">
                                                        <div class="o_website_form_flex">
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="CRM"/>
                                                                    <span class="o_fake_editable">CRM</span>
                                                                </label>
                                                                <label>
                                                                    <span class="o_fake_editable">

                                                                    </span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="CONTABILIDAD"/>
                                                                    <span class="o_fake_editable">
                                                                        CONTABILIDAD</span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="E-COMMERCE"/>
                                                                    <span class="o_fake_editable">E-COMMERCE</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-8 col-lg-10">
                                                        <div class="o_website_form_flex">
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="VENTAS"/>
                                                                    <span class="o_fake_editable">VENTAS</span>
                                                                </label>
                                                                <label>
                                                                    <span class="o_fake_editable"></span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="MANUFACTURA"/>
                                                                    <span class="o_fake_editable">MANUFACTURA</span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="INVENTARIO"/>
                                                                    <span class="o_fake_editable">INVENTARIO</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-8 col-lg-10">
                                                        <div class="o_website_form_flex">
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="FACTURACIÓN"/>
                                                                    <span class="o_fake_editable">FACTURACIÓN</span>
                                                                </label>
                                                                <label>
                                                                    <span class="o_fake_editable"></span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="MESA DE AYUDA"/>
                                                                    <span class="o_fake_editable">MESA DE
                                                                        AYUDA</span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="PROYECTOS"/>
                                                                    <span class="o_fake_editable">PROYECTOS</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-8 col-lg-10">
                                                        <div class="o_website_form_flex">
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="COMPRAS"/>
                                                                    <span class="o_fake_editable">COMPRAS</span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="MARKETING"/>
                                                                    <span class="o_fake_editable">MARKETING</span>
                                                                </label>
                                                            </div>
                                                            <div class="checkbox o_website_form_flex_item">
                                                                <label>
                                                                    <input type="checkbox"
                                                                           class="o_website_form_input"
                                                                           name="modules" value="NÓMINA"/>
                                                                    <span class="o_fake_editable">NÓMINA</span>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row form-group form-field o_website_form_custom o_fake_not_editable">
                                                    <div class="col-md-4 col-lg-1">
                                                        <label class="col-form-label o_fake_editable" for="others">
                                                            OTROS</label>
                                                    </div>
                                                    <div class="col-md-8 col-lg-7">
                                                        <textarea class="form-control o_website_form_input"
                                                                  name="others"></textarea>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7 btn-demo">
                                                        <button class="btn btn-orange btn-lg o_website_form_send o_default_snippet_text">
                                                            Solicitar Demo</button>
                                                        <span id="o_website_form_result"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>

    </data>
    <data noupdate="1">
        <!-- Manage Page odoo -->
        <record id="thi_odoo_demo_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/odoo/demo</field>
            <field name="view_id" ref="theme_intello.thi_odoo_demo"/>
            <field name="track">True</field>
        </record>
    </data>


</odoo>