<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="thi_develop" model="ir.ui.view">
            <field name="name">Web Develop</field>
            <field name="type">qweb</field>
            <field name="key">theme_intello.thi_develop</field>
            <field name="arch" type="xml">
                <t name="Develop" priority="40" t-name="theme_intello.thi_develop">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'web_develop'"/>
                        <div id="wrap" class="oe_structure">
                            <section id="develop_banner_id" name="develop_banner" class="banner banner_develop">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-7 offset-md-1">
                                            <div class="banner-title-text">
                                                <h1>
                                                    <span class="banner-title-top text-spacing">HACEMOS</span>
                                                    <span class="banner-title-middle">REALIDAD TU</span>
                                                    <span class="banner-title-bottom">proyecto web</span>
                                                </h1>
                                            </div>
                                            <div class="banner-title-line">
                                                <hr class="bottom-line"/>
                                            </div>
                                            <div class="banner-subtitle-text">
                                                <h4>
                                                    <span class="banner-subtitle">¡Si aún no estás en la
                                                        web,<br/></span>
                                                    <span class="banner-subtitle"> es el</span>
                                                    <span class="banner-subtitle-bold"> momento!</span>
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="col-md-4"/>
                                    </div>
                                </div>
                            </section>
                            <section id="key_words_id" name="key_words" class="padding-section-develop">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="title-section b-left-orange title-develop d-sm-none">
                                            <h3>Desarrollo</h3>
                                            <h4>Web</h4>
                                        </div>
                                        <div class="col-left align-items-center justify-content-center d-sm-none">
                                            <p class="text-justify content-section">
                                                Desarrollo web es un término que define
                                                la
                                                creación
                                                de sitios web para Internet o una
                                                intranet.
                                            </p>
                                        </div>
                                        <div class="col-md-10 offset-md-1">
                                            <div class="row">
                                                <div class="col-md-12 pb-4">
                                                    <div class="row">
                                                        <div class="col-md-3 col-sm-3 col-6 adjust-col-sm">
                                                            <div class="key_words_image_1"/>
                                                        </div>
                                                        <div class="col-md-3 col-sm-3 col-6 adjust-col-sm">
                                                            <div class="key_words_image_2"/>
                                                        </div>
                                                        <div class="col-md-3 col-sm-3 col-6 adjust-col-sm">
                                                            <div class="key_words_image_3"/>
                                                        </div>
                                                        <div class="col-md-3 col-sm-3 col-6 adjust-col-sm">
                                                            <div class="key_words_image_4"/>
                                                        </div>
                                                        <div class="col-6 d-sm-none ">
                                                            <div class="key_words_image_5"/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 d-none d-sm-block pt-1">
                                                    <div class="row">
                                                        <div class="col-md-3 col-sm-3 col-4">
                                                            <div class="key_words_image_5"/>
                                                        </div>
                                                        <div class="col-md-9 col-9">
                                                            <div class="float-div-develop">
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="col-left d-none d-sm-flex align-items-center justify-content-center">
                                                                            <p class="text-justify content-section">
                                                                                Desarrollo web es un término que define
                                                                                la
                                                                                creación
                                                                                de sitios web para Internet o una
                                                                                intranet.
                                                                            </p>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="col-right d-none d-sm-flex align-items-center justify-content-center">
                                                                            <div class="title-section b-left-orange title-develop">
                                                                                <h3>Desarrollo</h3>
                                                                                <h4>Web</h4>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1"/>
                                    </div>

                                </div>
                            </section>
                            <section name="develop_work" id="develop_work_id" class="padding-section-develop">
                                <div class="container-fluid">
                                    <div class="row padding-row-develop">
                                        <div class="col-md-11 offset-md-1 background_develop_bottom">
                                            <div class="row">
                                                <div class="col-md-5">
                                                    <div class="title-develop-section-bottom ">
                                                        <div class="b-left-white">
                                                            <h1 class="title">
                                                                Nuestro
                                                            </h1>
                                                        </div>
                                                        <div class="subtitle-develop-bottom">
                                                            <h2 class="subtitle">
                                                                trabajo
                                                            </h2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-7"/>
                                                <div class="col-md-5"/>
                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-center justify-content-center">
                                                        <p class="text-justify paragraph">
                                                            Contamos con un equipo interdisciplinario en desarrollo
                                                            web que a través de diversos lenguajes de
                                                            programación permiten que tu solución funcione de manera
                                                            rápida y eficiente.<br/><br/>
                                                            Nuestros diseñadores gráficos, ingenieros y
                                                            desarrolladores harán de tus proyectos y desafíos una
                                                            realidad.
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="col-md-1"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>


    <data noupdate="1">
        <!-- Manage Page odoo -->
        <record id="thi_develop_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/web-develop</field>
            <field name="view_id" ref="theme_intello.thi_develop"/>
            <field name="track">True</field>
        </record>

    </data>

</odoo>