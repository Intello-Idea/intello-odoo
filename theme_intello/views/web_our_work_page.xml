<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="thi_our_work" model="ir.ui.view">
            <field name="name">Our Work</field>
            <field name="type">qweb</field>
            <field name="key">theme_intello.thi_our_work</field>
            <field name="arch" type="xml">
                <t name="Our Work" priority="60" t-name="theme_intello.thi_our_work">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'web_develop'"/>
                        <div id="wrap" class="oe_structure">
                            <section id="our_work_banner_id" name="our_work_banner" class="banner banner-our-work">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-7 offset-md-1 padding-title-banner">
                                            <div class="banner-title-text">
                                                <h1>
                                                    <span class="banner-title-top text-spacing">ALIADOS</span>
                                                    <span class="banner-title-middle">TECNOLÓGICOS</span>
                                                </h1>
                                            </div>
                                            <div class="banner-title-line">
                                                <hr class="bottom-line"/>
                                            </div>
                                            <div class="banner-subtitle-text">
                                                <h4>
                                                    <span class="banner-subtitle">La tecnología es el factor
                                                        fundamental para el desarrollo de las empresas.</span>
                                                </h4>
                                            </div>
                                        </div>
                                        <div class="col-md-4"/>
                                    </div>
                                </div>
                            </section>
                            <section id="our_work_section_logo_id" name="our_work_section_logo"
                                     class="section-logo-our-work">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-6 offset-md-1">
                                            <div>
                                                <img src="/theme_intello/static/src/img/our-work/Logo-Intello.png"
                                                     class="img-fluid img-logo-intello">

                                                </img>
                                            </div>
                                        </div>
                                        <div class="col-md-4 offset-md-1 col-sm-12 col-12">
                                            <div class="logo-simbolo">
                                                <img src="/theme_intello/static/src/img/our-work/Logo-simbolo.png"
                                                     class="img-fluid img-odoo-section-our">

                                                </img>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-11 offset-md-1 height-col-our-work"/>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 offset-md-1 col-sm-12 col-12">
                                            <div class="text-our-work">
                                                <p>
                                                    Muchos proyectos de tecnología fallan porque el software está
                                                    distanciado del proceso y de las personas...
                                                </p>

                                                <h3>
                                                    PARTNER OFICIAL
                                                </h3>

                                                <img src="/theme_intello/static/src/img/our-work/Logo-Odoo.png"
                                                     class="img-fluid img-odoo-section-our">
                                                </img>

                                            </div>
                                        </div>
                                        <div class="col-md-5">
                                            <div class="text-our-work">
                                                <div class="b-left-orange border-color-padding">
                                                    <p>
                                                        ...Nosotros podemos ayudarte a identificar y reducir los
                                                        reprocesos,
                                                        facilitando el camino para una rápida,
                                                        acertada y económica sistematización de todas las áreas de tu
                                                        empresa.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </section>
                            <section id="our_work_section_our_id" name="our_work_section_our"
                                     class="section-bottom-our">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="position-img-bottom">
                                                <img src="/theme_intello/static/src/img/our-work/Grafico.png"
                                                     class="img-fluid ">
                                                </img>
                                            </div>
                                        </div>
                                        <div class="col-md-7 background-column">
                                            <div class="row">
                                                <div class="col-md-4 offset-md-5">
                                                    <div class="our_work_title">
                                                        <div class="b-left-black">
                                                            <h1 class="title_our">
                                                                Nuestro
                                                            </h1>
                                                        </div>
                                                        <div class="subtitle-our-position">
                                                            <h2 class="subtitle_our">
                                                                trabajo
                                                            </h2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3"/>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-11 offset-md-1">
                                                    <div class="text-our-bottom-section align-items-center justify-content-center">
                                                        <ul>
                                                            <li>Desarrollamos tus ideas</li>
                                                            <li>Integramos tus procesos en una sola solución</li>
                                                            <li>Implementamos sistemas de información</li>
                                                            <li>Brindamos herramientas tecnológicas que permiten
                                                                gestionar tu empresa desde cualquier lugar</li>
                                                            <li>Expertos en diferentes áreas, trabajamos con pasión para
                                                                ofrecer lo mejor de nosotros en cada proyecto</li>
                                                            <li>Facilitamos la interrelación con tus clientes</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section id="our_work_section_work_team_id" name="our_work_section_work_team_bottom" class="section-work-team">
                                <div class="container-fluid">
                                    <div class="col-md-11 offset-md-1">
                                        <div class="our_work_title">
                                            <div class="b-left-black">
                                                <h1 class="title_our">
                                                    Equipo
                                                </h1>
                                            </div>
                                            <div class="subtitle_team_work">
                                                <h2 class="subtitle_our">
                                                    de trabajo
                                                </h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>

    <data noupdate="1">
        <!-- Manage Page odoo -->
        <record id="thi_our_work_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/our-work</field>
            <field name="view_id" ref="theme_intello.thi_our_work"/>
            <field name="track">True</field>
        </record>

    </data>
</odoo>